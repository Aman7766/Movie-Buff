<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/prf_toll"
        layout="@layout/toolbar"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </include>

    <LinearLayout

        android:id="@+id/linearLayout"
        style="@style/parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prf_toll">

        <LinearLayout
            style="@style/parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@mipmap/d2d"></ImageView>

            <TextView
                style="@style/wrap_contetnt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"

                android:text="@string/profile_pic"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading"></TextView>
        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                style="@style/wrap_contetnt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading">

            </TextView>

            <EditText
                android:id="@+id/nameedt"
                style="@style/parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="75dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading">

            </EditText>


        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/wrap_contetnt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"

                android:text="Mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading">

            </TextView>

            <EditText
                android:id="@+id/conedt"
                style="@style/parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="66dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading">

            </EditText>

        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/wrap_contetnt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading"></TextView>

            <EditText
                android:id="@+id/emailedt"
                style="@style/parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading">

            </EditText>

        </LinearLayout>

        <LinearLayout
            style="@style/parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/wrap_contetnt"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/dob"
                android:textColor="@color/black"
                android:textSize="@dimen/Heading">

            </TextView>

            <EditText
                android:id="@+id/dobedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="92dp"
                android:layout_marginEnd="20dp"
                android:hint="01/12/2023"
                android:inputType="date"
                android:textSize="@dimen/Heading"
                android:textStyle="bold">

            </EditText>


        </LinearLayout>

        <Button
            android:id="@+id/prf_btn"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:backgroundTint="@color/blue"
            android:text="@string/save"
            android:textSize="20sp">

        </Button>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>